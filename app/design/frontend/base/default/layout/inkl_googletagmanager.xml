<?xml version="1.0"?>
<layout version="0.1.0">
	<default>

		<block type="inkl_googletagmanager/tag" name="googletagmanager.tag"/>

		<reference name="head">
			<action method="append" ifconfig="inkl_googletagmanager/general/enabled">
				<block>googletagmanager.tag</block>
			</action>

			<action method="addItem" ifconfig="inkl_googletagmanager/datalayer_event/addtocart">
				<type>skin_js</type>
				<name>js/googletagmanager/event/addToCart.js</name>
				<params/>
			</action>

			<action method="addItem" ifconfig="inkl_googletagmanager/datalayer_customer/email">
				<type>skin_js</type>
				<name>js/googletagmanager/customer/email.js</name>
				<params/>
			</action>

			<action method="addItem" ifconfig="inkl_googletagmanager/datalayer_customer/email_sha1">
				<type>skin_js</type>
				<name>js/googletagmanager/customer/emailSha1.js</name>
				<params/>
			</action>

		</reference>
		
	</default>
</layout>
